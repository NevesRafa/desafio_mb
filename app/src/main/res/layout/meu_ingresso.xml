<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/nomeDoEventoMeuIngresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nome do envento" />

    <TextView
        android:id="@+id/dataMeuIngresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/nunito_italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomeDoEventoMeuIngresso"
        tools:text="Data" />

    <TextView
        android:id="@+id/horarioMeuIngresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/nunito_italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dataMeuIngresso"
        app:layout_constraintTop_toBottomOf="@id/nomeDoEventoMeuIngresso"
        tools:text="Horario" />

    <TextView
        android:id="@+id/localMeuIngresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/nunito_italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dataMeuIngresso"
        tools:text="Local" />

    <TextView
        android:id="@+id/quantidadeMeuIngresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/nunito_italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/localMeuIngresso"
        app:layout_constraintTop_toBottomOf="@id/horarioMeuIngresso"
        tools:text="Quantidade" />

</androidx.constraintlayout.widget.ConstraintLayout>